                                                        <input type="text" class="form-control form-control-lg pr-4 shadow-none" id="id-login-username" autocomplete="off" @bind-value="@register.Surname">
                                                        <i class="fas fa-user text-grey-m2 ml-n4"></i>
                                                        <label class="floating-label text-grey-l1 text-100 ml-n3" for="id-login-username">Last Name</label>
                                                    </div>
                                                </div>

                                                <div class="form-group mt-2 mt-md-1 col-md-8 offset-md-2">
                                                    <div class="d-flex align-items-center input-floating-label text-blue-m1 brc-blue-m2">
                                                        <input type="password" class="form-control form-control-lg pr-4 shadow-none" id="id-login-password" autocomplete="off" @bind-value="@register.Password">
                                                        <i class="fas fa-key text-grey-m2 ml-n4"></i>
                                                        <label class="floating-label text-grey-l1 text-100 ml-n3" for="id-login-password">Password</label>
                                                    </div>
                                                </div>
                                                <div class="form-group mt-2 mt-md-1 col-md-8 offset-md-2">
                                                    <div class="d-flex align-items-center input-floating-label text-blue-m1 brc-blue-m2">
                                                        <input type="password" class="form-control form-control-lg pr-4 shadow-none" id="id-login-password" autocomplete="off" @bind-value="@register.ConfirmPassword">
                                                        <i class="fas fa-key text-grey-m2 ml-n4"></i>
                                                        <label class="floating-label text-grey-l1 text-100 ml-n3" for="id-login-password">Password</label>
                                                    </div>
                                                </div>

                                                <div class="text-right text-md-right mt-n2 mb-2 col-md-8 offset-md-2">
                                                    <a href="#" class="text-primary-m2 text-95" data-toggle="tab" data-target="#id-tab-forgot">

                                                    </a>
                                                </div>

                                                <div class="form-group col-md-8 offset-md-2">

                                                    <button type="button" class="btn btn-info btn-block btn-md btn-bold mt-2 mb-4" @onclick="RegisterPerson">
                                                        Start
                                                    </button>
                                                </div>
                                            </form>


                                            <div class="form-row">
                                                <div class="col-12 d-flex flex-column align-items-center justify-content-center col-md-8 offset-md-2">

                                                    <hr class="brc-default-m4 mt-0 mb-2 w-100">

                                                    <div class="p-0 px-md-2 text-dark-tp3 my-3">
                                                        Already a Member?
                                                        <a href="/Login" class="nav-link dropdown-toggle">

                                                            <i class="nav-icon fas fa-sign-in-alt"></i>
                                                            <span class="nav-text fadeable">
                                                                <span>Back to Login</span>
                                                            </span>

                                                        </a>
                                                    </div>






                                                </div><!-- .tab-content -->
                                            </div>

                                        </div>

                                    </div>
                                </div>


                            </div>
                        </div><!-- /main -->

                    </div><!-- /.main-container -->

                </div><!-- /.body-container -->


            </div>
        </div>
    </div>
</body>

